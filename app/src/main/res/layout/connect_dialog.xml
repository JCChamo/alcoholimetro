<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="ESCRIBE UN VALOR"
        android:textStyle="bold"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="mensaje"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:inputType="textMultiLine"
            ></EditText>
    </LinearLayout>

    <EditText
        android:id="@+id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="mensaje"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:inputType="textMultiLine"
        ></EditText>

    <EditText
        android:id="@+id/message3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="mensaje"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:inputType="textMultiLine"
        ></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/acquisitionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/teal_700"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:text="ADQUISICIÓN"
                android:layout_marginRight="10dp"
                android:textSize="10dp"
                android:textColor="#fff"></Button>

            <Button
                android:id="@+id/cal1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/teal_700"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:text="CAL1"
                android:textColor="#fff"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/calibrationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/teal_700"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:text="CALIBRACIÓN"
                android:textSize="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#fff"></Button>

            <Button
                android:id="@+id/cal2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/teal_700"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:text="CAL2"
                android:textColor="#fff"></Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <Button
            android:id="@+id/cancelButton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:stateListAnimator="@null"
            android:textColor="#fff"
            android:elevation="5dp"
            android:textSize="10dp"
            android:text="CANCELAR"
            android:layout_marginRight="5dp"></Button>

        <Button
            android:id="@+id/sendButton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:stateListAnimator="@null"
            android:textColor="#fff"
            android:elevation="5dp"
            android:text="ENVIAR"
            android:layout_marginLeft="5dp"></Button>
    </LinearLayout>

</LinearLayout>